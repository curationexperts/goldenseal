<% if curation_concern.persisted? && curation_concern.members.present? %>
  <div class="row">
    <div class="col-md-12">
      <fieldset id="representative-image">
        <legend>
          Assign a TEI
        </legend>
        <p>Select the transcript of this <%= curation_concern.human_readable_type %>.</p>
        <%= f.select(:tei_id, curation_concern.generic_files.map { |file| [file.title.first, file.id] }, {}, { class: 'form-control' } ) %>
      </fieldset>
    </div>
  </div>
<% end %>

