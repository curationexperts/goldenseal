<% if f.object.persisted? && f.object.member_ids.present? %>
  <div class="row">
    <div class="col-md-12">
      <fieldset id="representative-image">
        <legend>
          Assign a Thumbnail
        </legend>
        <p>Select the file whose thumbnail should represent this <%= f.object.human_readable_type %>.</p>
        <%= f.select :representative_id, @form.select_files, {}, { class: 'form-control' } %>
      </fieldset>
    </div>
  </div>
<% end %>
